<section class="bg-white py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 xl:px-0 relative" 
         x-data="{
           currentTestimonial: 0,
           testimonials: [
             {
               quote: 'Working with Acme Design was a pleasure from start to finish. Their team was responsive, collaborative, and delivered exceptional designs.',
               author: 'Jennifer Carter',
               role: 'Head of Marketing'
             },
             {
               quote: 'The attention to detail and creative solutions provided by this team exceeded our expectations. They transformed our vision into reality with remarkable precision.',
               author: 'Michael Rodriguez',
               role: 'CEO'
             },
             {
               quote: 'Outstanding work! The design team delivered exactly what we needed and more. Their professionalism and expertise made the entire process seamless.',
               author: 'Sarah Thompson',
               role: 'Product Manager'
             }
           ],
           get currentQuote() { return this.testimonials[this.currentTestimonial]; },
           nextTestimonial() {
             this.currentTestimonial = (this.currentTestimonial + 1) % this.testimonials.length;
           },
           prevTestimonial() {
             this.currentTestimonial = this.currentTestimonial === 0 ? this.testimonials.length - 1 : this.currentTestimonial - 1;
           }
         }" 
         x-init="setInterval(() => nextTestimonial(), 5000)">
      
      <figure class="relative flex flex-col gap-y-6 sm:mx-auto sm:w-11/12 xl:gap-y-9">
        <blockquote class="flex flex-col items-start">
          <p class="text-xl font-medium text-neutral-700 md:text-2xl xl:text-3xl" 
             x-text="`&quot;${currentQuote.quote}&quot;`"></p>
          
          <div class="mt-6 flex flex-wrap gap-4 xl:mt-9">
            <figcaption class="font-medium text-slate-700" x-text="currentQuote.author"></figcaption>
            <div class="items-center justify-center rounded-full text-sm font-medium whitespace-nowrap shadow-[0_2px_10px_0px_rgba(0,0,0,0.15)] inline-flex bg-slate-300 text-slate-700 px-2 py-0.5" 
                 x-text="currentQuote.role"></div>
          </div>
          
          <img class="mt-6 h-8 xl:mt-9" src="https://tailkits.com/ui/iframe/assets/img/logo-big.svg" alt="Logo" />
          
          <div class="mt-6 flex items-center justify-center gap-x-3 md:mt-9 md:gap-x-6">
            <button
              type="button"
              aria-label="Previous testimonial"
              @click="prevTestimonial()"
              class="rounded-full cursor-pointer flex items-center justify-center whitespace-nowrap transition-all focus:shadow-[0_0px_0px_2px_rgba(15,23,42,0.25),0_2px_10px_0px_rgba(0,0,0,0.05)] shadow-[0_2px_10px_0px_rgba(0,0,0,0.05)] bg-slate-900 text-white hover:bg-slate-800 disabled:bg-slate-900/30 disabled:text-slate-50/70 w-8 h-8 p-1.5 md:w-10 md:h-10 md:p-2.5 xl:w-11 xl:h-11 xl:p-3"
            >
              <svg class="h-5 shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.72 12.53a.75.75 0 0 1 0-1.06l7.5-7.5a.75.75 0 1 1 1.06 1.06L9.31 12l6.97 6.97a.75.75 0 1 1-1.06 1.06l-7.5-7.5Z" clip-rule="evenodd" />
              </svg>
            </button>
            
            <button
              type="button"
              aria-label="Next testimonial"
              @click="nextTestimonial()"
              class="rounded-full cursor-pointer flex items-center justify-center whitespace-nowrap transition-all focus:shadow-[0_0px_0px_2px_rgba(15,23,42,0.25),0_2px_10px_0px_rgba(0,0,0,0.05)] shadow-[0_2px_10px_0px_rgba(0,0,0,0.05)] bg-slate-900 text-white hover:bg-slate-800 disabled:bg-slate-900/30 disabled:text-slate-50/70 w-8 h-8 p-1.5 md:w-10 md:h-10 md:p-2.5 xl:w-11 xl:h-11 xl:p-3"
            >
              <svg class="h-5 shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M16.28 11.47a.75.75 0 0 1 0 1.06l-7.5 7.5a.75.75 0 0 1-1.06-1.06L14.69 12 7.72 5.03a.75.75 0 0 1 1.06-1.06l7.5 7.5Z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
          
          <!-- Progress Dots -->
          <div class="mt-4 flex justify-center gap-x-2">
            <button @click="currentTestimonial = 0" 
                    class="w-2 h-2 rounded-full transition-all duration-200"
                    :class="currentTestimonial === 0 ? 'bg-slate-900' : 'bg-slate-300 hover:bg-slate-400'"
                    aria-label="Go to testimonial 1"></button>
            <button @click="currentTestimonial = 1" 
                    class="w-2 h-2 rounded-full transition-all duration-200"
                    :class="currentTestimonial === 1 ? 'bg-slate-900' : 'bg-slate-300 hover:bg-slate-400'"
                    aria-label="Go to testimonial 2"></button>
            <button @click="currentTestimonial = 2" 
                    class="w-2 h-2 rounded-full transition-all duration-200"
                    :class="currentTestimonial === 2 ? 'bg-slate-900' : 'bg-slate-300 hover:bg-slate-400'"
                    aria-label="Go to testimonial 3"></button>
          </div>
        </blockquote>
        
        <img class="absolute -top-5 left-0 h-12 xl:-top-16 xl:h-8" src="https://tailkits.com/ui/iframe/assets/img/quote.svg" alt="Quote" />
      </figure>
    </div>
</section>